<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="botonTokyo" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="botonFacebook"  parent="Widget.AppCompat.Button">
        <item name="android:text">@string/signwith</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableRight">@drawable/ic_facebook</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="botonGmail"  parent="Widget.AppCompat.Button">
        <item name="android:text">@string/signwith</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableRight">@drawable/ic_gmail</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
